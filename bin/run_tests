total=0
passed=0
failed=0

clean_output

for test in `ls -d */ | egrep '^[0-9]{2}_.*'`
do
  echo "Testing: $test"
  total=$(( $total + 1 ))
  # Result will tell us how many lines are different between the expected dot file and the generated one.
  result=`(cd $test ; viz_pipe config* ; (diff -y --suppress-common-lines expected.dot config*.dot | wc -l))`
  if [[ $result -ne 0 ]]
  then
    failed=$(( $failed + 1 ))
    echo "  Fail"
  else
    passed=$(( $passed + 1 ))
    echo "  Pass"
  fi
done

clean_output

echo "Tests: $passed passed, $failed failed, $total total"
